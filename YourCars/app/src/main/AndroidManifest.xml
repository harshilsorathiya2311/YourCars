<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SEND_SMS"
        tools:ignore="PermissionImpliesUnsupportedChromeOsHardware" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_app1"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_app1"
        android:supportsRtl="true"
        android:theme="@style/Theme.YourCars">
        <activity
            android:name=".ui.user.CarDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.user.ManageCarByBrandActivity"
            android:exported="false" />
        <activity
            android:name=".ui.user.UserTestDriveBookingActivity"
            android:exported="false" />
        <activity
            android:name=".ui.admin.UserManagementActivity"
            android:exported="false" />
        <activity
            android:name=".ui.admin.usersFragment"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".ui.admin.TestDriveRequestFragment"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".ui.admin.AddUpdateCarModelsActivity"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".ui.admin.Home_Fragment"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".ui.admin.FragmentManagmentActivity"
            android:exported="false" />
        <activity
            android:name=".ui.admin.AdminDashboardActivity"
            android:exported="false" />
        <activity
            android:name=".ui.user.DashboardActivity"
            android:exported="false" />
        <activity
            android:name=".auth.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".auth.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>